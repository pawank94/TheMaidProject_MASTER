<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_weight="12">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:elevation="20dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/at_emp_card_image" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:elevation="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="8dp"
                           >

                            <TextView
                                android:id="@+id/at_emp_card_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:textStyle="bold"
                                android:text="xyz" />

                            <TextView
                                android:id="@+id/at_emp_card_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="xyz" />

                            <TextView
                                android:id="@+id/at_emp_card_joining_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="xyz" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/textLightBlack"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/at_emp_card_absent_days"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="xyz" />

                        </LinearLayout>

                </android.support.v7.widget.CardView>

        </LinearLayout>
